@model BTL.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng ký";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 rounded" style="width: 100%; max-width: 500px;">
        <h3 class="text-center text-primary mb-4">
            <i class="bi bi-person-plus-fill me-2"></i>Đăng ký tài khoản
        </h3>

        <form asp-controller="Account" asp-action="Register" method="post">

            <div class="mb-3">
                <label asp-for="HoTen" class="form-label">
                    <i class="bi bi-person-fill me-1"></i>Họ và tên
                </label>
                <input asp-for="HoTen" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope-fill me-1"></i>Email
                </label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label">
                    <i class="bi bi-lock-fill me-1"></i>Mật khẩu
                </label>
                <input asp-for="MatKhau" class="form-control" type="password" required />
                <span class="text-danger" asp-validation-for="MatKhau"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SoDienThoai" class="form-label">
                    <i class="bi bi-telephone-fill me-1"></i>Số điện thoại
                </label>
                <input asp-for="SoDienThoai" class="form-control" pattern="0\d{9}" title="Số điện thoại phải bắt đầu bằng 0 và có 10 chữ số" required />
                <span class="text-danger" asp-validation-for="SoDienThoai"></span>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Đăng ký
                </button>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i>Quay lại đăng nhập
                </a>
            </div>

        </form>
    </div>
</div>
