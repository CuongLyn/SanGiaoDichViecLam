@model BTL.Models.CongViec

@{
    ViewData["Title"] = "Chỉnh sửa công việc";
}

<h2>Chỉnh sửa công việc</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="TieuDe" class="form-label"></label>
        <input asp-for="TieuDe" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="MucLuong" class="form-label"></label>
        <input asp-for="MucLuong" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LoaiHinh" class="form-label"></label>
        <input asp-for="LoaiHinh" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NgayDang" class="form-label"></label>
        <input asp-for="NgayDang" class="form-control" type="date" />


    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Edit" asp-controller="Job" class="btn btn-secondary">Hủy</a>
</form>
